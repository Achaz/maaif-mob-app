<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:paddingTop="15dp"
    android:paddingBottom="30dp">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_maaif" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report an Outbreak/Crisis Form"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Event Nature "
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/event_type"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Oubreak Type"
        android:textStyle="bold"
        android:id="@+id/a1ax"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a1a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/event_type_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Crisis Type"
        android:textStyle="bold"
        android:id="@+id/a1bx"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a1b"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/event_type_2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Disease/Pest"
        android:textSize="16dp"
        android:id="@+id/a1cx"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/a1c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:hint=""
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />

    <TextView
        android:text="Where did the event occur?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Select District"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />
    <Spinner
        android:id="@+id/district"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sub-County"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/subcounty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Parish"
        android:textSize="16dp"
          android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/parish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Village"
        android:textSize="16dp"
          android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/village"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entreprize Affected (If Applicable)"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterpriseSpinner"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox_rect_2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which date did the outbreak/crisis occur?"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/a49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_styles2"
        android:textColor="@color/btn_login"
        android:layout_marginBottom="30dip"
        android:text="Set Date"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Describe the Outbreak/Crisis (What, When, How)"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/a2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:hint=""
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reference Person Name"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/a3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reference Person Contact"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/a4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:ems="10"
        android:inputType="number"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where there any livestock affected by this Outbreak/Crisis?"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:entries="@array/yes_no"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where there any crops/plants affected by this Outbreak/Crisis?"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/yes_no"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where there any fish affected by this Outbreak/Crisis?"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/yes_no"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate how critical this event is/was."
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/a8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:entries="@array/rating"/>




    <Button
            android:id="@+id/btnSaveActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/button_styles"
            android:text="Report Outbreak/Crisis"
            android:textColor="@color/btn_login" />





</LinearLayout>
</ScrollView>