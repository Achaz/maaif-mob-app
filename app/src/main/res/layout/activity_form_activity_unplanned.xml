<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_maaif" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Unplanned Activity"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Activity"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Covered(If Applicable)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/topic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enterprise  One Covered (If Applicable)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
<!--        <Spinner-->
<!--            android:id="@+id/entreprize"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="30dp"/>-->
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enterpriseSpinner"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textbox_rect_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enterprise  Two Covered (If Applicable)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
<!--        <Spinner-->
<!--            android:id="@+id/entreprize2"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="30dp"/>-->
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enterprise2spinner"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textbox_rect_2"/>

        <TextView
            android:text="Select District"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />
        <Spinner
            android:id="@+id/district"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Sub-County"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Parish"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/parish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Village"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beneficiary Group(If applicable.)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/beneficiary_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:hint="e.g Twekobe Savings or None"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference Person"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/beneficiary_ref"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:hint="e.g Muhumuza Dennis"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference Person Contact"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/beneficiary_ref_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. of Males Reached"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/beneficiary_males"
            android:layout_width="match_parent"
            android:maxLength="3"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. of Females Reached"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/beneficiary_females"
            android:layout_width="match_parent"
            android:maxLength="3"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenges Faced during the Activity"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lessons learnt during the activity"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations for this activity"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Justification for Carrying out unplanned activity"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Description"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/justification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnSaveActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_styles"
            android:text="Save Unplanned Activity"
            android:textColor="@color/btn_login" />





    </LinearLayout>
</ScrollView>