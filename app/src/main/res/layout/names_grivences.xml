<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Complainant Details"
        android:layout_alignParentLeft="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/success"
        android:layout_alignParentRight="true"
        android:id="@+id/imageViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Name"
            android:layout_alignParentLeft="true"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Age"
            android:layout_alignParentLeft="true"
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Gender"
            android:layout_alignParentLeft="true"
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Phone"
            android:layout_alignParentLeft="true"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Grievance Details "
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Date of Grivance"
            android:layout_alignParentLeft="true"
            android:id="@+id/gDate"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />




        <TextView
            android:text="Grievance Nature"
            android:layout_alignParentLeft="true"
            android:id="@+id/gNature"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Grivance Type"
            android:layout_alignParentLeft="true"
            android:id="@+id/gType"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Grivance Reference"
            android:layout_alignParentLeft="true"
            android:id="@+id/gReference"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Grivance Description"
            android:layout_alignParentLeft="true"
            android:id="@+id/gDescription"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPhotoUpload"
            android:text="Attach a Photo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/button_styles2" />

    </TableLayout>

</RelativeLayout>