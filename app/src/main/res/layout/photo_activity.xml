<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_layout">

        <ImageView
            android:id="@+id/event_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_maaif"
            android:layout_below="@+id/event_layout"
            android:layout_marginBottom="10dp"
            tools:ignore="NotSibling" />



        <TextView
            android:id="@+id/event_type"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_logo"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold|italic"
             android:textSize="20dp" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_type"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_type_other"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_date"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_district"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_type_other"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_subcounty"
            android:layout_below="@+id/event_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_parish"
            android:layout_below="@+id/event_subcounty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_village"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_parish"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_males"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_village"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_females"
            android:layout_width="wrap_content"
            android:layout_below="@+id/event_males"

            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/event_notes"
            android:layout_below="@+id/event_females"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="7dp"
            android:textSize="16dp" />

        <TextView
            android:layout_below="@+id/event_notes"
            android:id="@+id/photoDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Enter Photo Description"
            android:textSize="16dp"
            android:textStyle="bold"/>



        <EditText
            android:id="@+id/photoDescription"
            android:layout_below="@+id/photoDescriptionText"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:maxLength="500"
            android:ems="10"
            android:layout_margin="7dp"
            android:inputType="text" />


        <TextView
            android:id="@+id/event_heading"
            android:layout_below="@+id/photoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="7dp"
            android:text="Select/Take Photo for Upload "
            android:textSize="18dp" />



        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/event_heading"
            android:scaleType="centerCrop"
            android:src="@drawable/camera" />




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_photo"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



            <Button
                android:id="@+id/upload_file_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:gravity="center"
                android:text="@string/title_with_progress"
                android:background="@drawable/button_styles"
                android:textColor="@color/btn_login"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="14dp"
                android:id="@+id/textViewProgress"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>