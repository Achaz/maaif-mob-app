<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="30dp">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_maaif" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Advisory Form"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:text="Location of the Farmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Select District"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />
    <Spinner
        android:id="@+id/district"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sub-County"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/subcounty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Parish"
        android:textSize="16dp"
          android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/parish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Village"
        android:textSize="16dp"
          android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/village"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Contact Details (if available)"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Name"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/farmerName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="e.g Robert Muhereza"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Contact"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/farmerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:ems="10"
        android:inputType="number"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the farmer inquiring about?"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginBottom="30dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was the farmer question received?"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <Spinner
        android:id="@+id/gReceipt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/gReceipt"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entreprize Covered(If Applicable)"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterpriseSpinner"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox_rect_2" />



    <Button
            android:id="@+id/btnSaveActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/button_styles"
            android:text="Submit Question"
            android:textColor="@color/btn_login" />





</LinearLayout>
</ScrollView>