<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_alignParentLeft="true"
        android:id="@+id/groupName"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/success"
        android:layout_alignParentRight="true"
        android:id="@+id/imageViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Category"
            android:layout_alignParentLeft="true"
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Level of operation"
            android:layout_alignParentLeft="true"
            android:id="@+id/level_of_operation"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Contact person name"
            android:layout_alignParentLeft="true"
            android:id="@+id/contact_person_name"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />



        <TextView
            android:text="Contact person phone number "
            android:layout_alignParentLeft="true"
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Contact person email"
            android:layout_alignParentLeft="true"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="District"
            android:layout_alignParentLeft="true"
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Sub county"
            android:layout_alignParentLeft="true"
            android:id="@+id/subcounty"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Parish"
            android:layout_alignParentLeft="true"
            android:id="@+id/parish"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Village"
            android:layout_alignParentLeft="true"
            android:id="@+id/village"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Registration number"
            android:layout_alignParentLeft="true"
            android:id="@+id/registration_number"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Enterprise"
            android:layout_alignParentLeft="true"
            android:id="@+id/enterprise"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Is registered"
            android:layout_alignParentLeft="true"
            android:id="@+id/is_registered"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Group members count"
            android:layout_alignParentLeft="true"
            android:id="@+id/group_members_count"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Is synced"
            android:layout_alignParentLeft="true"
            android:id="@+id/is_synced"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"/>

    </TableLayout>

</RelativeLayout>