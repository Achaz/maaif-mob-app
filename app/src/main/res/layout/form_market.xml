<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="10dp">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_maaif" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Market"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Market Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/a1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="e.g Kalerwe Market"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Market Categorization"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a13"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:entries="@array/market_type"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Market Chairperson/Secretary Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/a2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="e.g Ddumba Solomon"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Market Chairperson/Secretary Phone"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/a3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="e.g 0702123456"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint" />





    <TextView
        android:text="Select District"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />


    <Spinner
        android:id="@+id/district"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sub-County"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/subcounty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Parish"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <Spinner
        android:id="@+id/parish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Village"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <Spinner
        android:id="@+id/village"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />









    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Entreprize 1 "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Entreprize 2 "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Entreprize 3 "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Entreprize 4 "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Entreprize 5 "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>



    <Spinner
        android:id="@+id/a12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />











    <Button
            android:id="@+id/btnSaveMarket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/button_styles"
            android:text="Save Market"
            android:textColor="@color/btn_login" />





</LinearLayout>
</ScrollView>