<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/event_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_maaif"
            android:layout_below="@+id/event_layout"
            android:layout_marginBottom="10dp"
            tools:ignore="NotSibling" />



        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:layout_below="@+id/event_logo"
            android:textStyle="bold"
            android:text="Outbreak"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_below="@+id/head"
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:textStyle="bold|italic"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/subcounty"
            android:layout_below="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/parish"
            android:layout_below="@+id/subcounty"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/xgender"
            android:layout_below="@+id/parish"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_below="@+id/xgender"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/spousename"
            android:layout_below="@+id/status"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>



        <TextView
            android:id="@+id/phone"
            android:layout_below="@+id/spousename"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/xhaspouse"
            android:layout_below="@+id/phone"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/spousephone"
            android:layout_below="@+id/xhaspouse"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/ref"
            android:layout_below="@+id/spousephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_warning"
            android:layout_below="@+id/ref"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:layout_marginBottom="12dp"
            android:id="@+id/photoTypeText1"
            android:textStyle="normal"
            android:paddingHorizontal="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoTypeText1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Photo Upload Details"
            android:id="@+id/photoUploadStatus"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Description"
            android:layout_below="@+id/photoUploadStatus"
            android:textSize="16dp"
            android:id="@+id/photoTypeText"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>


        <EditText
            android:id="@+id/photoType"
            android:layout_below="@+id/photoTypeText"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/event_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoType"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:text="Select/Take Photo for Upload "
            android:textSize="16dp"
            android:textStyle="bold" />



        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/event_heading"
            android:scaleType="centerCrop"
            android:src="@drawable/camera" />




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_photo"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



            <Button
                android:id="@+id/upload_file_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:gravity="center"
                android:text="@string/title_with_progress"
                android:background="@drawable/button_styles"
                android:textColor="@color/btn_login"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="14dp"
                android:id="@+id/textViewProgress"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>